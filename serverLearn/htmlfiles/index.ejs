<!DOCTYPE html>
<html lang="en">
    <%- include("./html-elements/head.ejs") %>
<body>
    <%- include("./html-elements/nav.ejs") %>

    <div class="blogs content">
        <h2>All Blogs</h2>

        <% if(blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <a class="single" href="/blogs/<%= blog._id %>">
                <h3 class="title"><%= blog.title %></h3>
                <h5 class="snippet"><%= blog.snippet %></h5>
            </a>
            <% }) %>
        <% } else { %>
            <p>There are no blogs to display...</p>
            <% } %>

    </div>

    <%- include("./html-elements/footer.ejs") %>



</body>
</html>